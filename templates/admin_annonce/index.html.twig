{% extends 'base.html.twig' %}

{% block title %}Gestion des Annonces
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container-fluid">
		<h1>Liste des annonces</h1>
		<table class="table">
			<tr>
				<th>Titre</th>
				<th>Prix</th>
				<th>disponibilit√©</th>
				<th>action</th>
			</tr>
			{% for anounce in anounce %}
				<tr>
					<td>{{anounce.title}}</td>
					<td>{{anounce.price}}</td>
					<td>
						<div class="form-check">
							{% if anounce.isAvailable == 1 %}
								<input type="checkbox" class="form-check-input" name="" id="" value="true" checked>
							{% else %}
								<input type="checkbox" class="form-check-input" name="" id="" value="true" unchecked>
							{% endif %}
						</div>
					</td>
					<td>
						<a href="{{(path('annonces_edit', {slug:anounce.slug}))}}">
							<i class="far fa-edit"></i>
						</a>
						
						<a href="{{(path('admin_annonce_delete', {slug:anounce.slug}))}}" onclick="return confirm('Etes vous sur de bien vouloir supprimer cette annonce?')">
							<i class="fas fa-trash"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}
